<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/ProductGridLayout"
        android:useDefaultMargins="true">


        <TextView
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameListProductTextView"
            android:layout_column="0"
            android:layout_row="0"/>

        <TextView
            android:text="kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kcalListProductTextView"
            android:layout_column="1"
            android:layout_row="0"/>

        <TextView
            android:text="ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/igListProductTextView"
            android:layout_column="2"
            android:layout_row="0"/>

        <TextView
            android:text="Ww"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WWListProductTextView"
            android:layout_column="0"
            android:layout_row="1"/>

        <TextView
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BListProductTextView"
            android:layout_column="1"
            android:layout_row="1"/>

        <TextView
            android:text="T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TListProductTextView"
            android:layout_column="2"
            android:layout_row="1"/>
    </GridLayout>


</LinearLayout>